<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>


	
	<RecipeDef>
		<defName>GR_RecombineGenes</defName>
		<label>recombine genes</label>
		<description>Recombine genes from one or several species to get new ones.</description>
		<jobString>Recombining Genetic Material</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>500</workAmount>
		<workSkill>Intellectual</workSkill>
		<allowMixingIngredients>true</allowMixingIngredients>

		<recipeUsers>
				<li>GR_GeneRecombinator</li>	  
		</recipeUsers>	
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>BearGenetic</li>
						<li>ChickenGenetic</li>
						<li>BoomalopeGenetic</li>
						<li>MuffaloGenetic</li>
						<li>WolfGenetic</li>
						<li>InsectoidGenetic</li>
						<li>ReptilianGenetic</li>
						<li>HumanoidGenetic</li>
						<li>ThrumboGenetic</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
		
			<thingDefs>
						<li>BearGenetic</li>
						<li>ChickenGenetic</li>
						<li>BoomalopeGenetic</li>
						<li>MuffaloGenetic</li>
						<li>WolfGenetic</li>
						<li>InsectoidGenetic</li>
						<li>ReptilianGenetic</li>
						<li>HumanoidGenetic</li>
						<li>ThrumboGenetic</li>
					</thingDefs>
		</fixedIngredientFilter>
		<products>
			<GR_StabilizingGenes>1</GR_StabilizingGenes>
		</products>
		<skillRequirements>
			<li>
				<skill>Intellectual</skill>
				<minLevel>5</minLevel>
			</li>
		</skillRequirements>
	</RecipeDef>
	
	
 


  
</RecipeDefs>