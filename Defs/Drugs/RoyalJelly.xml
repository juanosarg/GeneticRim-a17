<?xml version="1.0" encoding="utf-8" ?>
<RoyalJelly>

  <ThingDef ParentName="DrugBase">
    <defName>RoyalJelly</defName>
    <label>royal jelly</label>
    <description>This pungent, viscuous liquid is produced by some types of insects, and produces a soft chemical high. It can cause addiction if abused.</description>
    <tradeability>Sellable</tradeability>
    <socialPropernessMatters>true</socialPropernessMatters>
    <tickerType>Rare</tickerType>
    <graphicData>
      <texPath>Things/Item/RoyalJelly</texPath>
     <graphicClass>Graphic_Single</graphicClass>

    </graphicData>
    <statBases>
      <MarketValue>15</MarketValue>
      <Mass>1</Mass>
			<DeteriorationRate>4</DeteriorationRate>
    </statBases>
    <techLevel>Neolithic</techLevel>
    <ingestible>
      <nutrition>0.10</nutrition>
			<baseIngestTicks>100</baseIngestTicks>
			<chairSearchRadius>4</chairSearchRadius>
      <preferability>RawTasty</preferability>
      <tasteThought></tasteThought>
      <foodType>VegetableOrFruit</foodType>
      <joy>0.6</joy>
      <nurseable>true</nurseable>
      <drugCategory>Social</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>RoyalJellyHigh</hediffDef>
          <severity>0.50</severity>
          <toleranceChemical>RoyalJelly</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>RoyalJellyTolerance</hediffDef>
          <severity>0.032</severity>
          <divideByBodySize>true</divideByBodySize>
        </li>
      </outcomeDoers>
    </ingestible>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>30</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
			<li Class="CompProperties_Drug">
				<chemical>RoyalJelly</chemical>
				<addictiveness>0.005</addictiveness>
				<minToleranceToAddict>0.25</minToleranceToAddict>
				<existingAddictionSeverityOffset>0.1</existingAddictionSeverityOffset>
				<needLevelOffset>1</needLevelOffset>
				<listOrder>30</listOrder>
			</li>
		</comps>
  </ThingDef>

  <HediffDef>
    <defName>RoyalJellyHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>royal jelly warmth</label>
    <defaultLabelColor>(1,0.5,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.75</severityPerDay>
      </li>
    </comps>
    <stages>
      <li/>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>RoyalJellyHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>RoyalJellyHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>royal jelly warmth</label>
        <description>Royal jelly is delicious... I can't believe it is produced by a disgusting insect.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Ambrosia addiction -->
  
  <ChemicalDef>
    <defName>RoyalJelly</defName>
    <label>royal jelly</label>
    <addictionHediff>RoyalJellyAddiction</addictionHediff>
    <toleranceHediff>RoyalJellyTolerance</toleranceHediff>
    <onGeneratedAddictedToleranceChance>0.8</onGeneratedAddictedToleranceChance>
  </ChemicalDef>
  
  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>Chemical_RoyalJelly</defName>
    <needClass>Need_Chemical</needClass>
    <label>royal jelly</label>
    <description>Because of a royal jelly addiction, this person needs to regularly consume the drug to avoid withdrawal symptoms.</description>
    <listPriority>20</listPriority>
  </NeedDef>

  <HediffDef ParentName="DrugToleranceBase">
    <defName>RoyalJellyTolerance</defName>
    <label>royal jelly tolerance</label>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.020</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>RoyalJelly</chemical>
      </li>
    </comps>
  </HediffDef>
  
  <HediffDef ParentName="AddictionBase">
    <defName>RoyalJellyAddiction</defName>
    <hediffClass>Hediff_Addiction</hediffClass>
    <label>royal jelly addiction</label>
    <causesNeed>Chemical_RoyalJelly</causesNeed>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.1</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>RoyalJellyWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>RoyalJellyAddiction</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>royal jelly withdrawal</label>
        <description>I really would love to eat some royal jelly right now.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</RoyalJelly>
